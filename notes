  <script>
    const loveNotes = [
      "You make my heart skip a beat",
      "I am yours",
      "You are precious to me",
      "Your heart is my home",
      "So much, forever",
      "Every day with you feels like Valentine's Day",
      "You light up my life in the most beautiful way",
      "You are my favorite reason to smile",
      "I love you to the moon and back",
      "You're my best friend",
      "Being with you is my favorite place to be",
      "I'm so proud of you",
      "You are the best thing that ever happened to me",
      "I looooooooovvvvvvvvvvvveeeeeeeeeee yoooooooouuuuuuuuuuuu"
    ];

    function generateLoveNote() {
      const randomIndex = Math.floor(Math.random() * loveNotes.length);
      document.getElementById('love-note').innerText = loveNotes[randomIndex];
    }
  </script>
